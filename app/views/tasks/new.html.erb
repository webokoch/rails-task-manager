<div class="container">
  <h1>New Task</h1>
  <div class="form">
    <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <br>
    <br>
    <p class="btn"> <%= f.submit %> </p>
    <% end %>
  </div>
</div>
